{{!-- Put burger image here --}}
<h1>Eat-Da-Burger</h1>

<h2>Devour these burgers!</h2>

<ul>
  {{#each burgers}}
		{{#unless this.devoured}}
    	{{this.id}}
   	 {{this.burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>These have been Devoured!</h2>

<ul>
  {{#each burgers}}
		{{#if this.devoured}}
			{{this.id}}
    	{{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
